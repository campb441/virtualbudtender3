<div class="page-header">
  <h1>
    Product recommendations
    <a href="/product_recommendations/new" class="btn btn-lg btn-success">New Product recommendation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Budtender</th>
        <th>Actions</th>
      </tr>

      <% @product_recommendations.each do |product_recommendation| %>
      <tr>
        <td><%= product_recommendation.user_id %></td>
        <td><%= product_recommendation.budtender_id %></td>
        <td>
          <a href="/product_recommendations/<%= product_recommendation.id %>" class="btn btn-primary">Show</a>
          <a href="/product_recommendations/<%= product_recommendation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_product_recommendation/<%= product_recommendation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
