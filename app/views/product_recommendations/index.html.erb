<div class="page-header">
  <h1>
    Product Recommendations
  </h1>
</div>

<form>
  <div class="form-group">
    <h4>I prefer...</h4>
    <div class="radio">
      <label>
        <input type="radio" name="smokeable" id="optionsRadios1" value="option1">
        Smokable Products
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name="smokeable" id="optionsRadios2" value="option2">
        Non-Smokable Products
      </label>
    </div>
    <div class="radio disabled">
      <label>
        <input type="radio" name="smokeable" id="optionsRadios3" value="option3" >
        Both
      </label>
    </div>

    <h4>I am seeking the following benefits...</h4>
    <div class="radio disabled">
      <label>
        <input type="radio" name="psychoactive" id="optionsRadios4" value="option4" >
        Psychoactive Effects
      </label>
    </div>
    <div class="radio disabled">
      <label>
        <input type="radio" name="psychoactive" id="optionsRadios5" value="option5" >
        Non-Psychoactive Effects
      </label>
    </div>
    <div class="radio disabled">
      <label>
        <input type="radio" name="psychoactive" id="optionsRadios6" value="option6" >
        Both
      </label>
    </div>

    <h4>I am a..</h4>
    <div class="radio disabled">
      <label>
        <input type="radio" name="medicinal" id="optionsRadios7" value="option7" >
        Medicinal Patient
      </label>
    </div>
    <div class="radio disabled">
      <label>
        <input type="radio" name="medicinal" id="optionsRadios8" value="option8" >
        Recreational User
      </label>
    </div>
    <div class="radio disabled">
      <label>
        <input type="radio" name="medicinal" id="optionsRadios9" value="option9" >
        Both
      </label>
    </div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>




