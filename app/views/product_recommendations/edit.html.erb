<!-- Validation failure messages -->
<% if @product_recommendation.errors.any? %>
  <% @product_recommendation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Product Recommendation #<%= @product_recommendation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_product_recommendation/<%= @product_recommendation.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @product_recommendation.user_id %>">
      </div>

      <!-- Label and input for budtender_id -->
      <div class="form-group">
        <label for="budtender_id" class="control-label">
          Budtender
        </label>

        <input type="text" id="budtender_id" name="budtender_id" placeholder="Budtender" class="form-control" value="<%= @product_recommendation.budtender_id %>">
      </div>

      <button class="btn btn-warning">
        Update Product Recommendation
      </button>
      or
      <a href="/product_recommendations/<%= @product_recommendation.id %>">Cancel</a>
    </form>
  </div>
</div>
